<?xml version="1.0"?>
<sdf version="1.10">
  <world name="cdpr_world">

    <!-- ================= PHYSICS ================= -->
    <physics name="default_physics" type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_update_rate>1000</real_time_update_rate>
      <real_time_factor>1.0</real_time_factor>
      <gravity>0 0 -9.81</gravity>
    </physics>

    <!-- ================= LIGHTING ================= -->
    <light name="sun" type="directional">
      <pose>0 0 10 0 -0.7 0</pose>
      <direction>0 0 -1</direction>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
    </light>

    <light name="fill_light" type="point">
      <pose>0 0 4 0 0 0</pose>
      <diffuse>0.9 0.9 1.0 1</diffuse>
      <attenuation>
        <range>12</range>
        <constant>0.5</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
    </light>

    <!-- ================= GROUND ================= -->
    <model name="ground_plane">
      <static>true</static>
      <link name="ground_link">

        <visual name="ground_visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>50 50</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.9 1.0 1</ambient>
            <diffuse>0.85 0.9 0.98 1</diffuse>
          </material>
        </visual>

        <collision name="ground_collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>50 50</size>
            </plane>
          </geometry>
        </collision>

      </link>
    </model>

    <!-- ================= FRAME ================= -->
    <model name="frame">
      <static>true</static>

      <!-- pillars -->
      <link name="pillar_fl">
        <pose>2 2 1.5 0 0 0</pose>
        <visual name="pillar_fl_vis">
          <geometry><box><size>0.12 0.12 3</size></box></geometry>
          <material><diffuse>0.45 0.45 0.5 1</diffuse></material>
        </visual>
      </link>

      <link name="pillar_fr">
        <pose>2 -2 1.5 0 0 0</pose>
        <visual name="pillar_fr_vis">
          <geometry><box><size>0.12 0.12 3</size></box></geometry>
          <material><diffuse>0.45 0.45 0.5 1</diffuse></material>
        </visual>
      </link>

      <link name="pillar_bl">
        <pose>-2 2 1.5 0 0 0</pose>
        <visual name="pillar_bl_vis">
          <geometry><box><size>0.12 0.12 3</size></box></geometry>
          <material><diffuse>0.45 0.45 0.5 1</diffuse></material>
        </visual>
      </link>

      <link name="pillar_br">
        <pose>-2 -2 1.5 0 0 0</pose>
        <visual name="pillar_br_vis">
          <geometry><box><size>0.12 0.12 3</size></box></geometry>
          <material><diffuse>0.45 0.45 0.5 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- ================= PLATFORM (EE) ================= -->
    <model name="platform">
      <pose>0 0 1.5 0 0 0</pose>
      <static>false</static>

      <link name="platform_link">
        <inertial>
          <mass>5</mass>
          <inertia>
            <ixx>0.05</ixx>
            <iyy>0.05</iyy>
            <izz>0.05</izz>
          </inertia>
        </inertial>

        <visual name="platform_body">
          <geometry><box><size>0.4 0.4 0.2</size></box></geometry>
          <material><diffuse>0.2 0.4 0.85 1</diffuse></material>
        </visual>

        <!-- lower vertices -->
        <visual name="L1"><pose>0.2 0.2 -0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="L2"><pose>-0.2 0.2 -0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="L3"><pose>-0.2 -0.2 -0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="L4"><pose>0.2 -0.2 -0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>

        <!-- upper vertices -->
        <visual name="U1"><pose>0.2 0.2 0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="U2"><pose>-0.2 0.2 0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="U3"><pose>-0.2 -0.2 0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>
        <visual name="U4"><pose>0.2 -0.2 0.1 0 0 0</pose><geometry><sphere><radius>0.03</radius></sphere></geometry></visual>

      </link>
    </model>

  </world>
</sdf>

